<%
  var pageCover = null;
  if (page.index_img) {
    pageCover = page.index_img;
  } else if (page.photos && page.photos.length > 0) {
    pageCover = page.photos[0];
  }
%>

<article class="post-detail">
  <% if (pageCover){ %>
    <div class="post-header-image" style="background-image: url('<%- url_for(pageCover) %>')"></div>
  <% } %>
  
  <div class="post-container" style="max-width: 800px; margin: 0 auto; background: #fff; padding: 2rem; border-radius: 8px;">
    <header class="post-header">
      <h1 class="post-title"><%= page.title %></h1>
      <div class="post-meta">
        <%= date(page.date, 'YYYY-MM-DD') %>
      </div>
    </header>
    
    <div class="post-content">
      <%- page.content %>
    </div>

    <!-- ============ 新增：上一篇/下一篇导航 ============ -->
    <nav class="post-nav">
      <div class="nav-item nav-prev">
        <% if (page.prev) { %>
          <a href="<%- url_for(page.prev.path) %>">
            <span class="nav-label">&laquo; Previous</span>
            <span class="nav-title"><%= page.prev.title %></span>
          </a>
        <% } %>
      </div>
      <div class="nav-item nav-next">
        <% if (page.next) { %>
          <a href="<%- url_for(page.next.path) %>">
            <span class="nav-label">Next &raquo;</span>
            <span class="nav-title"><%= page.next.title %></span>
          </a>
        <% } %>
      </div>
    </nav>
    <!-- ============================================== -->

  </div>
</article>